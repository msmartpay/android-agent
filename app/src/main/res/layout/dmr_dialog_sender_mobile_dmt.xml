<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip"
        android:background="@drawable/bg_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10.0dip">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10.0dip"
            android:text="Find Sender"
            android:textColor="@android:color/white"
            android:textSize="18.0sp"
            android:typeface="sans" />

        <ScrollView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20.0dip">

                <TextView
                    android:id="@+id/tview_otp_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10.0dip"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14.0sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_push_balance"
                    android:layout_width="match_parent"
                    android:layout_height="50.0dip"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30.0dip"
                    android:background="@drawable/broder_edittext"
                    android:hint="Enter 10 Digit Sender Mobile"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="10.0dip"
                    android:textColor="@color/btncolor" />

                <Button
                    android:id="@+id/btn_push_submit"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="200.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40.0dip"
                    android:background="@drawable/round_border"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18.0sp"
                    android:typeface="sans" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/close_push_button"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bt_dialog_close"
        android:text="Ã—"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>