<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingBottom="55.0dip">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_billpay_print_receipt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="1.0">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.2"
                        android:background="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_txn_status"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        style="@style/LeftTextLabelNormal"
                        android:layout_marginLeft="20dp"
                        android:text="Status"
                        android:textSize="22.0dip"
                        android:padding="10.0dip"
                        android:textStyle="bold"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_bene_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:orientation="vertical">

                        <TextView
                            style="@style/LeftTextLabelNormal"
                            android:layout_width="wrap_content"
                            android:text="Transaction Amount"
                            android:textSize="18.0dip"
                            android:padding="5.0dip"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_txn_amount"
                            android:layout_width="wrap_content"
                            style="@style/LeftTextLabelNormal"
                            android:text="Amount"
                            android:textSize="22.0dip"
                            android:padding="5.0dip"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_txn_date_time"
                            android:layout_width="wrap_content"
                            style="@style/TextLabelNormal"
                            android:text="DateTime"
                            android:textSize="16.0dip"
                            android:padding="5.0dip"/>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_txn_status"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hintcolor"
                    android:layout_marginBottom="20dp"/>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Txn Id"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_txn_id"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_operator_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Operator Id"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_operator_id"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Payment Mode"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_payment_mode"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Operator Name"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_operator"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Customer Name"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_customer_name"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_customer_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Customer Mobile"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_customer_mobile"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_bill_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Connection Number"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_bill_number"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_bill_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Bill Due Date"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_bill_due_date"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_txn_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5.0dip"
                    android:weightSum="2.0">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.7"
                        android:text="Comment"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/tv_details"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_txn_message"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14.0sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/hintcolor"
                    android:layout_marginBottom="20dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="end"
                    android:padding="5.0dip"
                    android:text="Powered By"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="5.0dip"
                    android:text="@string/company_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16.0sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="5.0dip"
                    android:text="@string/website"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12.0sp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"                    >

                    <Button
                        android:id="@+id/btn_share_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_border"
                        android:text="SHARE"
                        android:textColor="@color/whitecolor"
                        android:textSize="14.0dip"
                        android:textStyle="bold"
                        android:layout_marginEnd="10.0dip"
                        android:layout_gravity="center_horizontal"
                        android:visibility="visible"/>

                    <Button
                        android:id="@+id/btn_print_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_border"
                        android:text="PRINT"
                        android:layout_marginStart="10.0dip"
                        android:textColor="@color/whitecolor"
                        android:textSize="14.0dip"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:visibility="visible"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_txn_done"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_button1"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="Close"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/whitecolor"
                    android:textSize="12dp"
                    android:textStyle="bold" />



        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


</RelativeLayout>