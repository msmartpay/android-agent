<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingBottom="55.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="20.0dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Sender Number"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_sender_id"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Trans. Number"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_trans_number"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Trans. Status"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_trans_status"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Amount"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_amount"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Trans. description"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_trans_desc"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Trans. Type"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_tran_type"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Bank Ref Id"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_bank_ref_id"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Time Stamp"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_timestamp"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:weightSum="2.0">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/tv_details"
                    android:layout_weight="0.7"
                    android:text="Message"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund_message"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_refund_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Proceed to Refund"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18.0sp"
        android:typeface="sans" />
</RelativeLayout>