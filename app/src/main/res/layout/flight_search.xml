<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flight_search_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_origin"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_departure_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="MAA"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/whitecolor"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:id="@+id/tv_d_1"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/tv_departure_city"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Choose Departure City"
                        android:textSize="14sp"
                        android:textColor="@color/light_white"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/iv_hhh"
                    android:layout_weight=".4"
                    android:layout_width="0dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_d_3"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flight_from_to"/>
                <RelativeLayout
                    android:id="@+id/rl_destination"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_arrival_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="BLR"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/whitecolor"/>
                    <TextView
                        android:id="@+id/tv_a_1"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/tv_arrival_city"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Choose Arrival City"
                        android:textSize="14sp"
                        android:textColor="@color/light_white"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/ll_select"
                android:layout_marginTop="30dp"
                android:padding="10dp">
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:background="@color/whitecolor"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:id="@+id/ll_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/ll_one_way"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:background="@drawable/round_layout_w"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_one_way"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="One Way"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_round_way"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_layout_p"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_round_trip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Round Trip"
                                android:textColor="@color/whitecolor"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/ll_dat_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/select_3"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:background="@color/whitecolor"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:id="@+id/rl_depart"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_d_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Departure Date"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimary"/>
                            <ImageView
                                android:id="@+id/iv_d"
                                android:layout_width="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_below="@+id/tv_d_3"
                                android:layout_height="wrap_content"
                                android:src="@drawable/flight_take_off"/>
                            <TextView
                                android:id="@+id/tv_departure_date"
                                android:layout_below="@+id/iv_d"
                                android:layout_width="match_parent"
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:text="Choose Date"
                                android:textSize="14sp"
                                android:textColor="@color/hintcolor"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/cv_trip"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:background="@color/whitecolor"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:id="@+id/rl_return"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_a_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Return Date"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimary"/>
                            <ImageView
                                android:id="@+id/iv_r"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_centerInParent="true"
                                android:layout_below="@+id/tv_a_3"
                                android:layout_height="wrap_content"
                                android:src="@drawable/fliht_return"/>
                            <TextView
                                android:id="@+id/tv_return_date"
                                android:layout_below="@+id/iv_r"
                                android:layout_width="match_parent"
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:text="Choose Date"
                                android:textSize="14sp"
                                android:textColor="@color/hintcolor"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/cv_select_4"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/til_passenger"
                    android:layout_height="wrap_content"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:background="@color/whitecolor"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Class"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"/>
                        <Spinner
                            android:id="@+id/sp_class"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/flight_class"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/til_passenger"
                    android:layout_height="wrap_content"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:background="@color/whitecolor"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Passengers "
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:id="@+id/tv_adult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tv_child"
                            android:text="AD"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_layout_p"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/whitecolor"/>
                        <TextView
                            android:id="@+id/tv_child"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CH"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/round_layout_strok"
                            android:layout_toLeftOf="@+id/tv_infant"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:id="@+id/tv_infant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IN"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:background="@drawable/round_layout_strok"
                            android:textColor="@color/colorPrimary"/>
                        <LinearLayout
                            android:id="@+id/lllll"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/tv_infant"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Adults ( 12 yrs + )"
                                android:textSize="12sp"
                                android:textColor="@color/active_tab"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Child ( 2 - 12 yrs)"
                                android:textSize="12sp"
                                android:textColor="@color/active_tab"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Infant ( 0 - 2 yrs )"
                                android:textSize="12sp"
                                android:textColor="@color/active_tab"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_below="@+id/lllll"
                            android:id="@+id/ll__p"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_adult_v"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textColor="@color/active_tab" />
                            <TextView
                                android:id="@+id/tv_child_v"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textColor="@color/active_tab" />
                            <TextView
                                android:id="@+id/tv_infant_v"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textColor="@color/active_tab" />
                        </LinearLayout>
                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:orientation="vertical"
                            android:layout_below="@+id/ll__p"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/ll_view"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_type_b"
                                    android:layout_below="@+id/cv_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Adult  |  "
                                    android:textColor="@color/active_tab"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_adult"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </androidx.recyclerview.widget.RecyclerView>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv_error_sht"
                                android:layout_below="@+id/ll_view"
                                android:layout_alignBaseline="@+id/tv_total_pess"
                                android:layout_toLeftOf="@+id/tv_total_pess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="Total Passengers"
                                android:textColor="@color/active_tab"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_total_pess"
                                android:layout_below="@+id/ll_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="bottom|center"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/quater_circle"
                                android:paddingTop="10dp"
                                android:paddingLeft="20dp"
                                android:paddingBottom="5dp"
                                android:paddingRight="5dp"
                                android:text="1"
                                android:textColor="@color/whitecolor"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_search_flight"
                    style="@style/btn_main"
                    android:text="Search Flights"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/ll_class"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>