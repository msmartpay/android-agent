                        android:hint="Select Outlet District">

                        <AutoCompleteTextView
                            android:id="@+id/outlet_district"
                            style="@style/et_signup"
                            android:paddingLeft="15dp"
                            android:layout_height="60dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/editHintColor"
                        android:hint="Enter Outlet City">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outlet_city"
                            style="@style/et_signup"
                            android:textColor="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/editHintColor"
                        android:hint="Enter Outlet Pin code">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outlet_pincode"
                            style="@style/et_signup"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>
                    -->
                    <Button
                        android:id="@+id/btn_confirm_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/rounded_btn_login"
                        android:text="Confirm Signup"
                        android:onClick="start"
                        android:textColor="@color/whitecolor" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>