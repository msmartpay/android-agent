<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="55.0dip"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16.0dip">

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10.0dip">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_leave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edit_hotel_wish"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusableInTouchMode="false"
                                android:hint="Search By Area, Landmark, OR Hotel"
                                android:paddingLeft="5.0dip"
                                android:text="Allahabad"
                                android:textColor="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip"
                                android:orientation="horizontal"
                                android:paddingLeft="5.0dip"
                                android:paddingRight="5.0dip">

                                <LinearLayout
                                    android:layout_width="0.0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10.0dip"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Check-In"
                                        android:textColor="@color/colorPrimary" />

                                    <LinearLayout
                                        android:id="@+id/linear_checkin_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/border"
                                        android:orientation="horizontal"
                                        android:weightSum="1.0">

                                        <LinearLayout
                                            android:layout_width="0.0dip"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.8"
                                            android:orientation="vertical"
                                            android:padding="5.0dip">

                                            <TextView
                                                android:id="@+id/tview_checkin_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Date"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="16.0dip"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tview_checkin_month_year"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingTop="5.0dip"
                                                android:text="Oct 2017, Tue"
                                                android:textColor="@color/colorPrimary" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0.0dip"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5.0dip"
                                            android:layout_weight="0.2">

                                            <ImageView
                                                android:id="@+id/image_checkin_calender"
                                                android:layout_width="wrap_content"
                                                android:layout_height="50.0dip"
                                                android:src="@drawable/calender" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0.0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10.0dip"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Check-Out"
                                        android:textColor="@color/colorPrimary" />

                                    <LinearLayout
                                        android:id="@+id/linear_checkout_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/border"
                                        android:orientation="horizontal"
                                        android:weightSum="1.0">

                                        <LinearLayout
                                            android:layout_width="0.0dip"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.8"
                                            android:orientation="vertical"
                                            android:padding="5.0dip">

                                            <TextView
                                                android:id="@+id/tview_checkout_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Date"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="16.0dip"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tview_checkout_month_year"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingTop="5.0dip"
                                                android:text="Oct 2017, Wed"
                                                android:textColor="@color/colorPrimary" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0.0dip"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5.0dip"
                                            android:layout_weight="0.2">

                                            <ImageView
                                                android:id="@+id/image_checkout_calender"
                                                android:layout_width="wrap_content"
                                                android:layout_height="50.0dip"
                                                android:src="@drawable/calender" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    app:cardCornerRadius="5.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true" />

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    app:cardCornerRadius="5.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="10.0dip">

                            <TextView
                                android:id="@+id/tv_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.0dip"
                                android:text="No. of Room"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12.0sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_no"
                                android:layout_marginLeft="5.0dip"
                                android:layout_marginBottom="12.0dip"
                                android:background="@drawable/border"
                                android:orientation="horizontal"
                                android:padding="10.0dip">

                                <ImageView
                                    android:id="@+id/image_room_min"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="20.0dip"
                                    android:src="@drawable/minus" />

                                <TextView
                                    android:id="@+id/tv_room"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingLeft="15.0dip"
                                    android:paddingRight="15.0dip"
                                    android:text="1"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="24.0sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/image_room_plus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="20.0dip"
                                    android:src="@drawable/add" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    app:cardCornerRadius="5.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15.0dip">

                        <LinearLayout
                            android:id="@+id/ll_room"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button"
            style="@style/btn_main"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50.0dip"
            android:text="Search Hotel" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>