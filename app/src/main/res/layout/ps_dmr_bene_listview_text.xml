<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/whitecolor"
    android:paddingBottom="5.0dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_square_primary_color"
        android:padding="5.0dip"
        android:paddingBottom="5.0dip"
        android:weightSum="2.0">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dmr_bene"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/tick_ok"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bene_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Beneficiary Name"
                android:padding="5.0dip"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Bank Name"
                android:padding="5.0dip"
                android:textColor="@color/color_grey"
                android:textSize="12.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_account_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Account Number"
                android:padding="5.0dip"
                android:textColor="@color/btncolor"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/tv_bank_ffsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Bank IFSC"
                android:padding="5.0dip"
                android:textColor="@color/color_grey"
                android:textSize="12.0dip"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_dmr_recipient_id"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:padding="5.0dip"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_delete_dmr_beneficiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Delete"
                android:textColor="@color/colorPrimary"
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:background="@drawable/round_border_pr"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_select_beneficiary"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/blue">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_navigate_next_white_24dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>