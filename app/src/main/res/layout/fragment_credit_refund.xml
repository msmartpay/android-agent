<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".rechargeBillPay.CreditRefundFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5.0dip"
        app:cardElevation="2.0dip"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_credit_refund_tid"
                android:layout_margin="10dp"
                style="@style/til_main_ot"
                android:hint="Enter Service Delivery TID">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/id_credit_refund_tid"
                    style="@style/til_main_ot"
                    android:ems="10"
                     />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_credit_refund_otp"
                android:layout_below="@+id/til_credit_refund_tid"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:hint="Enter OTP"
                style="@style/til_main_ot">

                <EditText
                    android:id="@+id/id_credit_refund_otp"
                    style="@style/til_main_ot"
                    android:ems="10"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/refund_request_otp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@+id/til_credit_refund_otp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/round_border"
                android:foreground="?selectableItemBackgroundBorderless"
                android:text="Get OTP"
                android:textColor="@color/whitecolor"
                android:textSize="12.0dip" />
            <Button
                android:id="@+id/refund_request"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round_border"
                android:foreground="?selectableItemBackgroundBorderless"
                android:text="Confirm Refund"
                android:textColor="@color/whitecolor"
                android:textSize="14.0dip" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>