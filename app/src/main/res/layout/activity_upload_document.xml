<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kyc.UploadDocumentActivity">

    <LinearLayout
        android:id="@+id/ll_upload_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="normal"
            android:textColor="@color/red"
            android:textSize="16dp">

        </TextView>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/sp_kyc_document"
            style="@style/sp_material"
            android:paddingStart="10dp"
            app:smsp_enableErrorLabel="false"
            app:smsp_hint="Select Document Type"
            app:smsp_itemColor="@color/sp_itemColor"
            app:smsp_itemListColor="@color/sp_itemListColor"
            app:smsp_itemListHintBackgroundColor="@color/sp_itemListHintBackgroundColor"
            app:smsp_itemListHintColor="@color/sp_itemListHintColor"
            app:smsp_itemSize="@dimen/sp_size"
            app:smsp_selectedItemListColor="@color/sp_itemListSelectedColor"
            app:smsp_underlineColor="@color/sp_underlineColor" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/til_main"
            android:hint="Enter Document Number">

            <EditText
                android:id="@+id/edit_document_number"
                style="@style/et_main"
                android:inputType="textCapCharacters"
                android:background="@color/whitecolor"
                android:maxLength="30"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/iv_file"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:onClick="start"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:src="@drawable/default_photo" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kyc_select"
                style="@style/Button"
                android:layout_weight="0.3"
                android:layout_gravity="left"
                android:background="@drawable/round_border"
                android:layout_height="40dp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:text="Select Document"
                android:textColor="@color/whitecolor"
                android:textSize="10.0dip"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">

            </TextView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kyc_upload"
                style="@style/Button"
                android:layout_weight="0.3"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_below="@+id/ll_upload_header"
                android:background="@drawable/btn_orange"
                android:foreground="?selectableItemBackgroundBorderless"
                android:text="Upload Document"
                android:textColor="@color/whitecolor"
                android:textSize="10.0dip" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_kyc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_login_shape"
            android:foreground="?selectableItemBackgroundBorderless"
            android:padding="15.0dip"
            android:text="Submit For Verification"
            android:textColor="@color/colorPrimary"
            android:textSize="17.0sp"
            android:textStyle="bold"/>


        <View
            android:id="@+id/view"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#aaa"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_kyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp" />

    </LinearLayout>



</RelativeLayout>