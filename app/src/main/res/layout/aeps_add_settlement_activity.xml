<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_electricity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55.0dip"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10.0dip"
            android:text="Enter Bank Details"
            android:textColor="@color/black"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/til_main_ot"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Bank Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bank"
                style="@style/et_main_ot"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/til_main_ot"
            android:layout_marginTop="10dp"
            android:hint="Account Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ac"
                style="@style/et_main_ot"
                android:ems="10"
                android:inputType="numberPassword" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/til_main_ot"
            android:layout_marginTop="10dp"
            android:hint="Confirm Account Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_confirm_ac"
                style="@style/et_main_ot"
                android:ems="10"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/til_main_ot"
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Account Holder"
                    android:layout_weight="1.2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_ac_holder"
                        style="@style/et_main_ot"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_verify_settlement_bank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="FETCH NAME"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    style="@style/btn_main_off_white"
                    android:textColor="@color/btntextwhite"
                    android:textSize="15sp"
                    android:layout_weight="0.8" />


        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/til_main_ot"
            android:layout_marginTop="15dp"
            android:hint="IFSC">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ifsc"
                style="@style/et_main_ot"
                android:maxLength="11"
                android:inputType="textCapCharacters" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="@string/note"
            android:textColor="@color/black"
            android:textSize="14.0sp"
            android:textStyle="normal" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="@string/fundsettlement_note"
            android:textColor="@color/black"
            android:textSize="14.0sp"
            android:textStyle="normal" />
    </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_add"
        style="@style/btn_main"
        android:text="ADD BANK" />

</RelativeLayout>
