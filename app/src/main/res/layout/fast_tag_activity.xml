<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50.0dip"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5.0dip"
        card_view:cardElevation="2.0dip"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20.0dip"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_operator"
                style="@style/til_main_ot_sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Select Fastag Operator">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/et_operator"
                    style="@style/mactp_main_ot_sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_vehicle_no"
                style="@style/til_main_ot"
                android:layout_marginTop="5dp"
                android:hint="Vehicle Register Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_vehicle_no"
                    style="@style/et_main_ot"
                    android:ems="10"
                    android:maxLength="10"
                    android:textAllCaps="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_customer_name"
                style="@style/til_main_ot"
                android:layout_marginTop="5dp"
                android:hint="Customer Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_customer_name"
                    style="@style/et_main_ot"
                    android:ems="10"
                    android:maxLength="10" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_due_date"
                android:layout_marginTop="5dp"
                style="@style/til_main_ot"
                android:visibility="gone"
                android:hint="Due Date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_due_date"
                    style="@style/et_main_ot"
                    android:ems="10"
                    android:maxLength="10" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_amount"
                style="@style/til_main_ot"
                android:layout_marginTop="5dp"
                android:hint="Amount">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_amount"
                    style="@style/et_main_ot"
                    android:inputType="number"
                    android:maxLength="6" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_fetch_bill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Fetch Customer Details"
                android:background="@color/btncolor"
                android:textColor="@color/whitecolor"
                android:textSize="18.0dip"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_confirm_request"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Confirm Request"
                android:background="@color/btncolor"
                android:textColor="@color/whitecolor"
                android:textSize="18.0dip"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>