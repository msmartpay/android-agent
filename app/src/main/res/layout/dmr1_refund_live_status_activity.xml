<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingBottom="55dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Sender Number"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight=".7"/>


                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_sender_id"
                    style="@style/tv_details"
                    android:textSize="14sp"
                    android:layout_weight="1.2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Trans. Number"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_trans_number"
                    style="@style/tv_details"
                    android:textSize="14sp"
                    android:layout_weight="1.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Trans. Status"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_trans_status"
                    style="@style/tv_details"
                    android:textSize="14sp"
                    android:layout_weight="1.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Amount"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_amount"
                    style="@style/tv_details"
                    android:textSize="14sp"
                    android:layout_weight="1.2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">


                <TextView
                    style="@style/tv_details"
                    android:text="Trans. description"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight=".7"/>


                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_trans_desc"
                    style="@style/tv_details"
                    android:textSize="14sp"
                    android:layout_weight="1.2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">


                <TextView
                    style="@style/tv_details"
                    android:text="Trans. Type"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_tran_type"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">


                <TextView
                    style="@style/tv_details"
                    android:text="Bank Ref Id"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_bank_ref_id"
                    style="@style/tv_details"
                    android:textSize="14sp"
                    android:layout_weight="1.2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">


                <TextView
                    style="@style/tv_details"
                    android:text="Time Stamp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_timestamp"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/tv_details"
                    android:layout_weight=".7"
                    android:text="Message"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/refund_message"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_refund_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Proceed to Refund"
        android:textAllCaps="false"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
</RelativeLayout>
