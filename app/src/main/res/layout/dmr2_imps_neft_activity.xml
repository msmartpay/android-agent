<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".7"
                    android:text="Beneficiary Name"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_payee_name"
                    style="@style/tv_details"
                    android:layout_weight="1.2"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".7"
                    android:textSize="14sp"
                    android:text="Beneficiary Account No"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_payee_acc_no"
                    style="@style/tv_details"
                    android:textSize="14sp"
                    android:layout_weight="1.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".7"
                    android:textSize="14sp"
                    android:text="Beneficiary IFSC"
                    android:textStyle="bold" />

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_payee_ifsc"
                    style="@style/tv_details"
                    android:textSize="14sp"
                    android:layout_weight="1.2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".7"
                    android:text="Enter Amount"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edit_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Amount"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/btncolor"
                        android:backgroundTint="@color/active_tab"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".7"
                    android:text="Enter Remark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <TextView
                    style="@style/tv_details"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edit_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:hint="Enter Remark"
                        android:textColor="@color/btncolor"
                        android:backgroundTint="@color/active_tab" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="2">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <RadioButton
                        android:id="@+id/radio_imps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"
                        android:text="IMPS"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/btncolor"
                        android:buttonTint="@color/btncolor"/>
                    <RadioButton
                        android:id="@+id/radio_neft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.13"
                        android:textStyle="bold"
                        android:text="NEFT"
                        android:textSize="14sp"
                        android:buttonTint="@color/btncolor"
                        android:textColor="@color/btncolor"
                        android:checked = "false"/>

                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/txtsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Proceed"
        android:typeface="sans"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>