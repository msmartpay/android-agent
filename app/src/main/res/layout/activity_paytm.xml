<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rechargeBillPay.PaytmActivity"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:context=".rechargeBillPay.CreditBillPayFragment">

        <TextView
            android:id="@+id/tv_otpMsg"
            style="@style/tv_details"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Otp Messahe"
            android:textColor="@color/green" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@+id/tv_otpMsg"
        android:id="@+id/til_paytm_mobile"
        style="@style/til_main_ot"
        android:hint="Enter Customer Mobile Number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_paytm_mobile"
            style="@style/til_main_ot"
            android:ems="10"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_paytm_name"
            style="@style/til_main_ot"
            android:hint="Enter Beneficiary Name"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_paytm_name"
                style="@style/til_main_ot"

                android:ems="10" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_paytm_amount"
            style="@style/til_main_ot"
            android:layout_marginTop="10dp"
            android:hint="Enter Amount">

            <EditText
                android:id="@+id/et_paytm_amount"
                style="@style/til_main_ot"
                android:ems="10" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_paytm_otp"
            style="@style/til_main_ot"
            android:layout_marginTop="10dp"
            android:hint="Enter OTP"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_paytm_otp"
                style="@style/til_main_ot"
                android:ems="10"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_paytm_getotp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/round_border"
        android:foreground="?selectableItemBackgroundBorderless"
        android:text="Get OTP"
        android:textColor="@color/whitecolor"
        android:textSize="12.0dip" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_paytm_validateOtp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/til_paytm_otp"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/btn_orange"
        android:foreground="?selectableItemBackgroundBorderless"
        android:text="Verify OTP"
        android:textColor="@color/whitecolor"
        android:textSize="12.0dip" />

</LinearLayout>

        <Button
            android:id="@+id/btn_payment_payment"
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_border"
            android:foreground="?selectableItemBackgroundBorderless"
            android:text="Confirm Payment"
            android:textColor="@color/whitecolor"
            android:textSize="14.0dip" />
    </LinearLayout>
</ScrollView>