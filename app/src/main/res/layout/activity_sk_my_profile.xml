<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolor">

    <LinearLayout
        android:id="@+id/activity_my_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150.0dip"
            android:padding="10.0dip">

            <ImageView
                android:id="@+id/id_my_profile_picc"
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="25.0dip"
                android:layout_marginLeft="10.0dip"
                app:srcCompat="@drawable/id_contact" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_my_profile_picc"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="error"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14.0dip"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="93.0dip"
                android:layout_marginRight="93.0dip"
                android:gravity="center"
                android:text="0.0"
                android:textColor="@color/colorPrimary"
                android:textSize="20.0dip"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_addAmount"
                style="@style/Button"
                android:layout_height="30.0dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="47.0dip"
                android:layout_marginRight="47.0dip"
                android:layout_marginBottom="28.0dip"
                android:text="Add Money"
                android:textAllCaps="false"
                android:textSize="12.0sp"
                android:visibility="gone" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/whitecolor"
            app:cardElevation="5.0dip"
            app:cardUseCompatPadding="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="10.0dip"
                    android:text="KYC Information"
                    android:textColor="@color/whitecolor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KYC Status"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/tv_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_status"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="10.0sp" />

                    <ImageView
                        android:id="@+id/tv_kyc"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_toRightOf="@+id/tv_status"
                        android:src="@drawable/applied_icon"
                        android:visibility="gone" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_adhar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_info_text"
                        android:layout_marginTop="10.0dip"
                        android:hint="Aadhar No.">

                        <EditText
                            android:id="@+id/et_p_adhar"
                            style="@style/et_profile"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_adhar_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_adhar"
                        android:layout_marginTop="10.0dip"
                        android:hint="Aadhar Holder Name">

                        <EditText
                            android:id="@+id/et_p_holder_name"
                            style="@style/et_profile" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_kycApply"
                        style="@style/Button"
                        android:layout_height="30.0dip"
                        android:layout_below="@+id/til_adhar_holder"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:text="Request Now"
                        android:textAllCaps="false"
                        android:textSize="12.0sp" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/whitecolor"
            app:cardElevation="5.0dip"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="10.0dip"
                    android:text="Personal Information"
                    android:textColor="@color/whitecolor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?selectableItemBackgroundBorderless">

                        <Button
                            android:id="@+id/btn_edit"
                            style="@style/Button"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:text="Edit"
                            android:textAllCaps="false"
                            android:textSize="12.0sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/til_adhar"
                            android:layout_marginTop="10.0dip"
                            android:layout_weight="1.0"
                            android:hint="First Name">

                            <EditText
                                android:id="@+id/et_p_name"
                                style="@style/et_profile"
                                android:background="#fff"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/til_adhar"
                            android:layout_marginTop="10.0dip"
                            android:layout_weight="1.0"
                            android:hint="Last Name">

                            <EditText
                                android:id="@+id/et_p_last_name"
                                style="@style/et_profile"
                                android:background="#fff"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_weight="1.0"
                            android:hint="DOB">

                            <EditText
                                android:id="@+id/et_p_age"
                                style="@style/et_profile"
                                android:focusable="false"
                                android:focusableInTouchMode="true"
                                android:inputType="number"
                                android:background="#fff"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:hint="Gender">

                            <AutoCompleteTextView
                                android:id="@+id/actv_p_gender"
                                style="@style/et_profile"
                                android:layout_height="60dp"
                                android:background="#fff"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:hint="Mobile">

                        <EditText
                            android:id="@+id/et_p_mob"
                            style="@style/et_profile"
                            android:background="#fff"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:hint="Email">

                        <EditText
                            android:id="@+id/et_p_email"
                            style="@style/et_profile"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/til_adhar"
                            android:layout_marginTop="10.0dip"
                            android:layout_weight="1.0"
                            android:hint="Pan No.">

                            <EditText
                                android:id="@+id/et_p_pan_no"
                                style="@style/et_profile"
                                android:inputType="textCapCharacters" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_weight="1.0"
                            android:hint="Pin Code">

                            <EditText
                                android:id="@+id/et_p_pin"
                                style="@style/et_profile"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_weight="1.0"
                            android:hint="Country">

                            <AutoCompleteTextView
                                android:id="@+id/actv_p_country"
                                style="@style/et_profile" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">

                            <ProgressBar
                                android:id="@+id/pb_p_state"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="25.0dip"
                                android:visibility="gone" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip"
                                android:hint="State">

                                <AutoCompleteTextView
                                    android:id="@+id/actv_p_state"
                                    style="@style/et_profile" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">

                            <ProgressBar
                                android:id="@+id/pb_p_district"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="25.0dip"
                                android:visibility="gone" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip"
                                android:hint="District">

                                <AutoCompleteTextView
                                    android:id="@+id/actv_p_district"
                                    style="@style/et_profile" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_weight="1.0"
                            android:hint="City">

                            <AutoCompleteTextView
                                android:id="@+id/actv_p_city"
                                style="@style/et_profile" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:hint="Address">

                        <EditText
                            android:id="@+id/et_p_address"
                            style="@style/et_profile" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>