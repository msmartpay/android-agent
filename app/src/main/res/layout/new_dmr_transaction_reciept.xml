<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

		<ScrollView  
      		android:id="@+id/scrollView"
   			android:layout_width="match_parent"
   			android:layout_height="match_parent"
			android:fillViewport="true"
			android:paddingBottom="55dp"
   			android:orientation="vertical" >
   			
		 <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
             android:layout_marginRight="20dp"
             android:layout_marginLeft="20dp"
			 android:layout_marginTop="20dp"
			android:gravity="center_horizontal"
			android:orientation="vertical" >

			 <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:weightSum="2"
				 android:orientation="horizontal"
				 android:padding="5dp">

				 <TextView
					 style="@style/tv_details"
					 android:text="Service Delivery TID"
					 android:textStyle="bold"
					 android:layout_weight=".7"/>

                 <TextView
                     style="@style/tv_details"
                     android:text=":"
                     android:textStyle="bold"
					 android:layout_weight=".1"/>

				 <TextView
					 android:id="@+id/tv_delivery_tid"
					 style="@style/tv_details"
					 android:layout_weight="1.2" />
			 </LinearLayout>

			 <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:weightSum="2"
				 android:orientation="horizontal"
				 android:padding="5dp">

				 <TextView
					 style="@style/tv_details"
					 android:text="Transfered Type"
					 android:textStyle="bold"
					 android:layout_weight=".7"/>

				 <TextView
					 style="@style/tv_details"
					 android:text=":"
					 android:textStyle="bold"
					 android:layout_weight=".1"/>

				 <TextView
					 android:id="@+id/tv_transfer_type"
					 style="@style/tv_details"
					 android:layout_weight="1.2"/>
			 </LinearLayout>

			 <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:orientation="horizontal"
				 android:weightSum="2"
				 android:padding="5dp">

				 <TextView
					 android:id="@+id/textView2"
					 style="@style/tv_details"
					 android:layout_weight=".7"
					 android:text="Transfered Amount"
					 android:textStyle="bold" />

				 <TextView
					 style="@style/tv_details"
					 android:text=":"
					 android:textStyle="bold"
					 android:layout_weight=".1"/>

				 <TextView
					 android:id="@+id/tv_transfer_amount"
					 style="@style/tv_details"
					 android:layout_weight="1.2"/>
			 </LinearLayout>

			 <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:orientation="horizontal"
				 android:weightSum="2"
				 android:padding="5dp">


				 <TextView
					 style="@style/tv_details"
					 android:text="Beneficiary Name"
					 android:textStyle="bold"
					 android:layout_weight=".7"/>

				 <TextView
					 style="@style/tv_details"
					 android:text=":"
					 android:textStyle="bold"
					 android:layout_weight=".1"/>

				 <TextView
					 android:id="@+id/tv_bene_name"
					 style="@style/tv_details"
					 android:layout_weight="1.2"/>
			 </LinearLayout>

			 <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:orientation="horizontal"
				 android:weightSum="2"
				 android:padding="5dp">


				 <TextView
					 style="@style/tv_details"
					 android:text="Bank Name"
					 android:textStyle="bold"
					 android:layout_weight=".7"/>

				 <TextView
					 style="@style/tv_details"
					 android:text=":"
					 android:textStyle="bold"
					 android:layout_weight=".1"/>

				 <TextView
					 android:id="@+id/tv_bank_name"
					 style="@style/tv_details"
					 android:layout_weight="1.2"/>
			 </LinearLayout>

			 <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:orientation="horizontal"
				 android:weightSum="2"
				 android:padding="5dp">


				 <TextView
					 style="@style/tv_details"
					 android:text="Account Number"
					 android:textStyle="bold"
					 android:layout_weight=".7"/>

				 <TextView
					 style="@style/tv_details"
					 android:text=":"
					 android:textStyle="bold"
					 android:layout_weight=".1"/>

				 <TextView
					 android:id="@+id/tv_acc_number"
					 style="@style/tv_details"
					 android:layout_weight="1.2"/>
			 </LinearLayout>


			 <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:orientation="horizontal"
				 android:weightSum="2"
				 android:padding="5dp">


			 <TextView
				 style="@style/tv_details"
				 android:text="Bank IFSC Code"
				 android:textStyle="bold"
				 android:layout_weight=".7"/>


				 <TextView
					 style="@style/tv_details"
					 android:text=":"
					 android:paddingLeft="35dp"
					 android:layout_weight=".1"
					 android:textStyle="bold" />

				 <TextView
					 android:id="@+id/tv_ifsc_code"
					 style="@style/tv_details"
					 android:layout_weight="1.2"/>
				</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:weightSum="2"
				android:padding="5dp">

				<TextView
					style="@style/tv_details"
					android:text="Transaction Status"
					android:textStyle="bold"
					android:layout_weight=".7"/>


				<TextView
					style="@style/tv_details"
					android:text=":"
					android:paddingLeft="35dp"
					android:layout_weight=".1"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/tv_transaction_status"
					style="@style/tv_details"
					android:layout_weight="1.2"/>
				</LinearLayout>
		 </LinearLayout>
		</ScrollView>
	    <Button
			android:id="@+id/txtsubmit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Update"
			android:layout_alignParentBottom="true"
			android:background="@color/colorPrimary"
		  	android:textSize="18sp"
			android:textAllCaps="false"
			android:textColor="@android:color/white"
			android:typeface="sans" />
  	

</RelativeLayout>
