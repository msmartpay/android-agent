<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50.0dip"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5.0dip"
            card_view:cardElevation="2.0dip"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20.0dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1.0">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/til_main_ot"
                        android:layout_marginTop="0dp"
                        android:hint="Prepaid Mobile No">

                        <EditText
                            android:id="@+id/edit_prepaid_mobile"
                            style="@style/et_main_ot"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="10"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/image_contactlist"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="0.1"
                        android:src="@drawable/contact"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/til_main_ot_sp"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:hint="Select Operator">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:id="@+id/edit_operator"
                            style="@style/mactp_main_ot_sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_view_plan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5.0dip"
                            android:text="@string/view_plan"
                            android:textColor="@color/sky_blue"
                            android:textSize="12.0sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_view_offer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5.0dip"
                            android:padding="5.0dip"
                            android:text="@string/offers"
                            android:textColor="@color/sky_blue"
                            android:textSize="12.0sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/til_main_ot"
                        android:layout_marginBottom="2.0dip"
                        android:layout_weight="0.3"
                        android:hint="Amount">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_amount"
                            style="@style/et_main_ot"
                            android:inputType="number"
                            android:maxLength="5" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_proceed"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_border"
        android:foreground="?selectableItemBackgroundBorderless"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Proceed"
            android:textColor="@color/whitecolor"
            android:textSize="18.0dip"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>