<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent" 
     android:layout_height="match_parent"
     android:background="#fff"
     android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="20dp">

		<ImageView
			android:layout_width="200dp"
			android:layout_height="150dp"
			android:src="@drawable/help_support_icon"
			android:layout_gravity="center"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="FRIENDLY SUPPORT"
				android:textStyle="bold"
				android:textColor="@color/colorPrimaryDark"
				android:background="@drawable/border_line"
				android:padding="10dp"
				android:gravity="center"
				android:textSize="16dp"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:padding="5dp"
			android:background="@color/colorLightPrimary">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Feel Free to contact us : "
			android:textStyle="bold"
			android:textColor="@color/colorPrimaryDark"/>
			</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:weightSum="2"
			android:orientation="horizontal"
			android:padding="5dp">

			<TextView
				android:id="@+id/confirm_policy_h_name"
				style="@style/tv_details"
				android:text="Email ID"
				android:textStyle="bold"
				android:layout_weight=".7"/>

			<TextView
				style="@style/tv_details"
				android:text=":"
				android:textStyle="bold"
				android:layout_weight=".1"/>

			<TextView
				android:id="@+id/confirm_contact"
				style="@style/tv_details"
				android:layout_weight="1.2"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:weightSum="2"
			android:orientation="horizontal"
			android:padding="5dp">

			<TextView
				style="@style/tv_details"
				android:text="Contact No."
				android:textStyle="bold"
				android:layout_weight=".7"/>

			<TextView
				style="@style/tv_details"
				android:text=":"
				android:textStyle="bold"
				android:layout_weight=".1"/>

			<TextView
				android:id="@+id/help_contact"
				style="@style/tv_details"
				android:layout_weight="1.2"
				android:text="+91 9711402774\nTiming (10:00 AM to 6:30 PM)" />/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:padding="5dp"
			android:background="@color/colorLightPrimary">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Call us :"
				android:textStyle="bold"
				android:textColor="@color/colorPrimaryDark"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="5dp"
			android:gravity="center"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="Click to call"
				android:textStyle="bold"
				android:textColor="@color/colorPrimaryDark"
				android:layout_weight="1"
				android:gravity="right"/>

			<ImageView
				android:id="@+id/id_support_callbtn"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:src="@drawable/help_call_icon"
				android:layout_weight="1"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:padding="5dp"
			android:background="@color/colorLightPrimary">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Visit us :"
				android:textStyle="bold"
				android:textColor="@color/colorPrimaryDark"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:padding="5dp"
			android:gravity="center"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/website_link"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/website"
				android:textStyle="bold"
				android:textColor="@color/colorPrimaryDark"
				android:textSize="17dp"
				android:gravity="center"/>

		</LinearLayout>

	</LinearLayout>
	</ScrollView>
</LinearLayout>
