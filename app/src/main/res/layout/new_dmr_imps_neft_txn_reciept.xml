<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingBottom="55dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">

                    <TextView
                        style="@style/tv_details"
                        android:text="Bank RRN"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight=".7"/>


                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_bank_rrn"
                        style="@style/tv_details"
                        android:textSize="14sp"
                        android:layout_weight="1.2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/tv_details"
                        android:text="Sender Id"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight=".7"/>

                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_sender_id"
                        style="@style/tv_details"
                        android:textSize="14sp"
                        android:layout_weight="1.2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/tv_details"
                        android:text="Sender Name"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight=".7"/>

                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_sender_name"
                        style="@style/tv_details"
                        android:textSize="14sp"
                        android:layout_weight="1.2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/tv_details"
                        android:text="Bene Mobile"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight=".7"/>

                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_bene_mobile"
                        style="@style/tv_details"
                        android:textSize="14sp"
                        android:layout_weight="1.2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">


                    <TextView
                        style="@style/tv_details"
                        android:text="IFSC Code"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight=".7"/>


                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_ifsc_code"
                        style="@style/tv_details"
                        android:textSize="14sp"
                        android:layout_weight="1.2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">


                    <TextView
                        style="@style/tv_details"
                        android:text="Account No."
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight=".7"/>

                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_acc_number"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">


                    <TextView
                        style="@style/tv_details"
                        android:text="Bene Name"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight=".7"/>

                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_bene_name"
                        style="@style/tv_details"
                        android:textSize="14sp"
                        android:layout_weight="1.2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">


                    <TextView
                        style="@style/tv_details"
                        android:text="Bank Name"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight=".7"/>

                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_bank_name"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/tv_details"
                        android:layout_weight=".7"
                        android:text="Amount"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_transfer_amount"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp">

                    <TextView
                        style="@style/tv_details"
                        android:text="Date Time"
                        android:textStyle="bold"
                        android:layout_weight=".7"
                        android:textSize="14sp"/>


                    <TextView
                        style="@style/tv_details"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_weight=".1"/>

                    <TextView
                        android:id="@+id/tv_date_time"
                        style="@style/tv_details"
                        android:layout_weight="1.2"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Done"
        android:textAllCaps="false"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
</RelativeLayout>