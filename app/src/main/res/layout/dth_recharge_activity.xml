<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50.0dip"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5.0dip"
            app:cardElevation="2.0dip"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20.0dip"
                android:gravity="end"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/til_main_ot_sp"
                    android:hint="Select Operator"
                    android:focusableInTouchMode="false"
                    android:focusable="false">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/edit_operator"
                        style="@style/mactp_main_ot_sp"
                        android:focusableInTouchMode="false"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_view_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5.0dip"
                        android:text="@string/view_plan"
                        android:textColor="@color/sky_blue"
                        android:textSize="12.0sp"
                        android:visibility="gone" />



                    <com.google.android.material.textfield.TextInputLayout
                       style="@style/til_main_ot"
                        android:layout_weight="0.7"
                        android:hint="Account Number">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_account_no_dth"
                            style="@style/et_main_ot"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="15" />
                    </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_view_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5.0dip"
                        android:padding="5.0dip"
                        android:text="@string/offers"
                        android:textColor="@color/sky_blue"
                        android:textSize="12.0sp"
                        android:visibility="gone" />
                    <TextView
                        android:id="@+id/tv_cust_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5.0dip"
                        android:padding="5.0dip"
                        android:text="@string/view_customer_details"
                        android:textColor="@color/sky_blue"
                        android:textSize="12.0sp"
                        android:visibility="gone" />
                </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/til_main_ot"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Amount">

                        <EditText
                            android:id="@+id/edit_amount_dth"
                            style="@style/et_main_ot"
                            android:inputType="number"
                            android:maxLength="6" />
                    </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:layout_marginStart="5.0dip"
                    android:padding="10dip"
                    android:textColor="@color/whitecolor"
                    android:textSize="12.0sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_proceed_dth"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_border"
        android:foreground="?selectableItemBackgroundBorderless"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Proceed"
            android:textColor="@color/whitecolor"
            android:textSize="18.0dip"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>