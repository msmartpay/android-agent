<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/whitecolor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_doc_type_label"
                        style="@style/tv_kyc_item"
                        android:text="Document Type : "
                        android:textColor="@color/colorPrimary" />
                    <TextView
                        android:id="@+id/tv_doc_type"
                        style="@style/tv_kyc_item"
                        android:layout_toRightOf="@+id/tv_doc_type_label"
                        android:text="aadhar"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/tv_doc_name_label"
                        style="@style/tv_kyc_item"
                        android:textColor="@color/colorPrimary"
                        android:layout_below="@+id/tv_doc_type_label"
                        android:text="Document Id : "/>
                    <TextView
                        android:id="@+id/tv_doc_name"
                        style="@style/tv_kyc_item"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_below="@+id/tv_doc_type"
                        android:layout_toRightOf="@+id/tv_doc_name_label"
                        android:text="XXXXXX"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <TextView

                        style="@style/tv_kyc_item"
                        android:textColor="@color/colorPrimary"
                        android:layout_below="@+id/tv_doc_type_label"
                        android:text="Status : "/>
                    <TextView
                        android:id="@+id/tv_doc_status"
                        style="@style/tv_kyc_item"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_below="@+id/tv_doc_type"
                        android:layout_toRightOf="@+id/tv_doc_name_label"
                        android:text="Active"/>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_download"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/download"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>