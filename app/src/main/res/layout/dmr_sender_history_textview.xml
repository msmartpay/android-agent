<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5.0dip"
    android:layout_marginRight="5.0dip"
    android:orientation="vertical"
    android:background="#dddddd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5.0dip"
        android:background="#ffffff"
        android:weightSum="2.0">

        <TextView
            android:id="@+id/tview_ser_deliv"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:hint="Service Delivery TID"
            android:textColor="@color/btncolor"
            android:textSize="12.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tview_account_no"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="right"
            android:hint="Account Number"
            android:textColor="@color/btncolor"
            android:textSize="10.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5.0dip"
        android:background="#ffffff"
        android:weightSum="2.0">

        <TextView
            android:id="@+id/tview_date_time"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.2"
            android:hint="Date Time"
            android:textColor="@color/btncolor"
            android:textSize="10.0dip" />

        <TextView
            android:id="@+id/tview_status"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="right"
            android:text="Status"
            android:textColor="@color/btncolor"
            android:textSize="12.0sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5.0dip"
        android:background="#ffffff"
        android:layout_marginBottom="5.0dip"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/tview_request_amt"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="start|center"
            android:text="Requested Amount"
            android:textColor="@color/manoj"
            android:textSize="14.0dip" />

        <Button
            android:id="@+id/btn_live_status"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="50.0dip"
            android:layout_weight="0.3"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="Live Status"
            android:textAllCaps="false"
            android:textColor="@color/whitecolor"
            android:textSize="12.0sp" />
    </LinearLayout>

</LinearLayout>