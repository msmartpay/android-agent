<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitecolor"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5.0dip"
        android:weightSum="3.0">

        <EditText
            android:id="@+id/edit_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:focusable="false"
            android:hint="From Date"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/editHintColor"
            android:textSize="14.0dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:focusable="false"
            android:hint="To Date"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/editHintColor"
            android:textSize="14.0dip"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_search_history"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="0.4"
            android:background="@drawable/round_border"
            android:text="Search"
            android:textColor="@color/colorLightPrimary"
            android:textSize="12.0dip"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.0dip"
        android:layout_marginBottom="10.0dip"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:childDivider="@android:color/holo_red_dark"
            android:divider="@android:color/white"
            android:dividerHeight="1.0dip"
            android:groupIndicator="@null" />
    </LinearLayout>
</LinearLayout>