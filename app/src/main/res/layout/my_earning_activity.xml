<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_marginTop="20dp"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/layout_border_r"
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp" >

            <TextView
                android:id="@+id/turnoverdetails"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:textColor="#f000"
                android:text="Your Earning Details"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginBottom="10dp">

            </TextView>

            <TableLayout
                android:id="@+id/table1"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

                <TableRow
                    android:id="@+id/row1"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="#f000"
                        android:text="Total Sale"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold" >

                    </TextView>
                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="#f000"
                        android:text=":"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold">

                    </TextView>
                    <TextView
                        android:id="@+id/totalReq"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="@color/colorPrimary"
                        android:text="1000" >

                    </TextView>

                </TableRow>

                <TableRow
                    android:id="@+id/row2"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

                    <TextView
                        android:id="@+id/t11"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="#f000"
                        android:text="Total Deduction"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold" >

                    </TextView>
                    <TextView
                        android:id="@+id/t22"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="#f000"
                        android:text=":"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold" >

                    </TextView>
                    <TextView
                        android:id="@+id/totaldeduction"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="@color/colorPrimary"
                        android:text="1000" >

                    </TextView>

                </TableRow>

                <TableRow
                    android:id="@+id/row3"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

                    <TextView
                        android:id="@+id/t111"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="#f000"
                        android:text="Total Earning"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold" >

                    </TextView>
                    <TextView
                        android:id="@+id/t222"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="#f000"
                        android:text=":"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold" >

                    </TextView>
                    <TextView
                        android:id="@+id/totalcomm"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:textColor="@color/colorPrimary"
                        android:text="1000" >
                    </TextView>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Earning"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/border_line"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/editHintColor"
            android:layout_weight=".9"
            android:layout_marginRight="5dp">

            <EditText
                android:id="@+id/my_date"
                style="@style/et_electricity_payment"
                android:ems="10"
                android:hint="Select Date"
                android:backgroundTint="@color/colorPrimaryDark"
                android:focusableInTouchMode="true"
                android:focusable="false">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/iv_calender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/calender"
                android:layout_weight=".1"
                android:layout_marginTop="10dp"/>

    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/search"
        style="@style/btn_main"
        android:text="submit"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

</RelativeLayout>