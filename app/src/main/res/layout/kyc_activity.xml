<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_balance_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:orientation="vertical"
            android:background="@color/whitecolor"
            android:weightSum="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kyc_err_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="14dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_kyc_doc_type"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="1"/>

                <TextView
                    android:id="@+id/tv_mendatory_doc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"/>


                <ImageView
                    android:id="@+id/iv_kyc_file"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:onClick="start"
                    android:src="@drawable/default_photo"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_kyc_tc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8.0dip"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5.0dip">

                    <CheckBox
                        android:id="@+id/kyc_tc_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/accept_kyc_tc_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="start"
                        android:padding="5.0dip"
                        android:text="I agree to Terms and Conditions"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit_kyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_btn_login"
                    android:padding="5.0dip"
                    android:text="Submit for Verification"
                    android:textColor="@color/whitecolor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_kyc_documents"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>