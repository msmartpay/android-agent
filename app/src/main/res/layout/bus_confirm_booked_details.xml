<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tview_pnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="PNR Number"
                    android:textColor="@color/whitecolor"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tview_orgin_to_desti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Origin to Destination"
                    android:textColor="@color/whitecolor"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="42dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat has been successfully booked."
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@android:color/holo_green_dark"/>

            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tview_transporter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport Name"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"/>
            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Transaction Id"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_transaction_id"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Bus Name"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_bus_name"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Departure Time"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_departure_time"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Transport PNR"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_transport_pnr"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Total Amount"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_total_amount"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Origin"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_origin"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Total Tickets"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_total_tickets"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Travel Date"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_travel_date"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Destination"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_destination"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Service Tax"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_service_tax"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/tv_details"
                    android:text="Commission"
                    android:textStyle="bold"
                    android:layout_weight=".7"/>

                <TextView
                    style="@style/tv_details"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_weight=".1"/>

                <TextView
                    android:id="@+id/tview_commission"
                    style="@style/tv_details"
                    android:layout_weight="1.2" />
            </LinearLayout>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">

                <ExpandableListView
                    android:id="@+id/expandable_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:divider="@color/whitecolor"
                    android:groupIndicator="@null">
                </ExpandableListView>
            </LinearLayout>

        </LinearLayout>
</ScrollView>
</LinearLayout>
    <LinearLayout
        android:id="@+id/tview_done"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/whitecolor"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>