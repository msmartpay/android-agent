<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sszAePS_transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/sszAePS_transparent"
        android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/sszAePS_colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/tv_custtext"
                        android:text="Purpose of Payment"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25">

                            <TextView
                                android:id="@+id/tv_cash_withdraw"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/ssz_cash_withdrawal_s"
                                android:gravity="center_vertical" />

                            <TextView
                                style="@style/tv_cashout_main_large"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_cash_withdraw"
                                android:text="Cash\nWithdrawal" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25">
                            <TextView
                                android:id="@+id/tv_mini_statement"
                                android:layout_width="80dp"
                                android:layout_height="80dp"

                                android:background="@drawable/ssz_mini_statement_s"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                style="@style/tv_cashout_main_large"
                                android:text="Mini\nStatement"
                                android:layout_below="@+id/tv_mini_statement"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25">

                            <TextView
                                android:id="@+id/tv_req_balance"
                                android:layout_width="80dp"
                                android:layout_height="80dp"

                                android:background="@drawable/ssz_balance_inquiry_s"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                style="@style/tv_cashout_main_large"
                                android:text="Balance\nEnquiry"
                                android:layout_below="@+id/tv_req_balance"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25">

                            <TextView
                                android:id="@+id/tv_aadhar_pay"
                                android:layout_width="80dp"
                                android:layout_height="80dp"

                                android:background="@drawable/ssz_cash_withdrawal_s"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                style="@style/tv_cashout_main_large"
                                android:text="Aadhaar\nPay"
                                android:layout_below="@+id/tv_aadhar_pay"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_mobile"
                        style="@style/til_main"
                        app:hintTextColor="@color/sszAePSColorPrimary"
                        android:hint="Customer Mobile Number">

                        <EditText
                            android:id="@+id/et_customer_mobile"
                            style="@style/et_main"
                            android:background="@color/sszAePS_colorWhite"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textSize="18dp"
                            android:scrollHorizontally="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_aadhaar"
                        style="@style/til_main"
                        app:hintTextColor="@color/sszAePSColorPrimary"
                        android:hint="Customer Aadhaar Number">

                        <EditText
                            android:id="@+id/et_aadhaar"
                            style="@style/et_main"
                            android:inputType="number"
                            android:background="@color/sszAePS_colorWhite"
                            android:lines="1"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:textSize="18dp"
                            android:scrollHorizontally="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/tv_custtext"
                        android:text="Select Device"
                        android:textColor="@color/sszAePSColorPrimary"
                        android:textStyle="normal"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_select_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/tv_select_device"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ssz_aeps_round_border_strock_hint"
                            android:drawableEnd="@drawable/ssz_aeps_ic_baseline_keyboard_arrow_down_24"
                            android:padding="10dp"
                            android:text="@string/payment_sdus_device"
                            android:textSize="16sp"
                            android:layout_weight="0.9"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/tv_custtext"
                        android:text="Select Bank"
                        android:textColor="@color/sszAePSColorPrimary"
                        android:textStyle="normal"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_select_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/tv_select_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ssz_aeps_round_border_strock_hint"
                            android:drawableEnd="@drawable/ssz_aeps_ic_baseline_keyboard_arrow_down_24"
                            android:padding="10dp"
                            android:text="@string/payment_sdus_bank"
                            android:textSize="16sp"
                            android:layout_weight="0.9"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/rl_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Amount">

                            <EditText
                                android:id="@+id/et_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:background="@color/sszAePS_colorWhite"
                                android:lines="1"
                                android:maxLines="1"
                                android:textSize="18dp"
                                android:scrollHorizontally="true" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


