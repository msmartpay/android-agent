                    <TextView
                        android:id="@+id/cv_capture_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/sszAePS_red" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/tv_custtext"
                        android:text="Note:"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/tv_custtext"
                        android:text="As per the UIDAI guidelines,customers are not applicable"
                        android:textColor="@color/sszAePS_blackcolor"
                        android:textSize="15sp" />


                    <Button
                        android:id="@+id/fab_cashout"
                        style="@style/btn_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ssz_rounded_btn_login"
                        android:layout_gravity="center_horizontal"
                        android:text="Scan and Proceed"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        <include
            layout="@layout/ssz_aeps_copyrights_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
