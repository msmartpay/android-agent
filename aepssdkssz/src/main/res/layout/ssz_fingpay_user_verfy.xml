<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sszAePS_colorWhite"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/ssz_toolbar_white_custom" />

    <LinearLayout
        android:id="@+id/ll_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_toolbar"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_request_otp_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/sszAePS_green"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="XXXXX"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_aadhar_number"
            style="@style/SSZTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Aadhaar Number">

            <com.google.android.material.textfield.TextInputEditText
                android:textColor="@color/sszAePSColorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_device_number"
            style="@style/SSZTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Fingerprint Device Number"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:textColor="@color/sszAePS_blackcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/ssz_rounded_btn_login"
            android:text="Request OTP"
            android:textColor="@color/sszAePS_colorWhite" />
    </LinearLayout>
</RelativeLayout>