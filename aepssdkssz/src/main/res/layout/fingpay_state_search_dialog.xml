<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sszAePS_colorWhite"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_fingpay_state_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ssz_aeps_ic_baseline_arrow_back_24"
            app:tint="@color/sszAePS_blackcolor" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_fingpay_state_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableStart="@drawable/ssz_aeps_ic_baseline_search_24"
            android:drawablePadding="5dp"
            android:drawableTint="@color/sszAePS_editHintColor"
            android:hint="Search State"
            android:padding="5dp" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fingpay_state"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1"/>


</LinearLayout>